{
    "workbench.productIconTheme": "macos-modern",
    "workbench.iconTheme": "macos-modern-big-sur-icon-theme",
    "material-icon-theme.hidesExplorerArrows": true,
    "editor.fontFamily": "SF Mono,JetBrainsMono Nerd Font, Consolas, 'Courier New', monospace", //"JetBrainsMono Nerd Font"
    "editor.fontSize": 18,
    "editor.fontLigatures": true,
    "editor.fontWeight": "500", // OPTIONAL
    "editor.lineHeight": 26,
    "editor.wordWrap":  "on",
    "editor.formatOnPaste":  true,
    "editor.smoothScrolling": true,
    "editor.mouseWheelZoom": true,
    "editor.unicodeHighlight.nonBasicASCII": false, // Disable breadcrumbs in the editor
    // ?Others
    "files.autoSave": "afterDelay",
    "security.workspace.trust.untrustedFiles": "open",


    // ----------- Rulers -----------
    // "editor.rulers": [
    //     {
    //         "column": 110,
    //         "color": "#684e4e"
    //     }
    // ],


    // !Workbench
    "workbench.editor.showTabs":"single",
    "workbench.tips.enabled": false,
    "workbench.tree.enableStickyScroll": true,
    // "workbench.statusBar.visible": false,
    // https://www.youtube.com/watch?v=UmsGwcJLJX0&list=PLXDouhCU5r6r53o_0yfbAj5bckF2nXrQL&index=2&pp=iAQB

    "workbench.commandPalette.experimental.askChatLocation": "quickChat",
    "workbench.commandPalette.experimental.suggestCommands": false,
    "workbench.commandPalette.experimental.enableNaturalLanguageSearch": true,
    "workbench.commandPalette.preserveInput": false,
    "workbench.commandPalette.history": 50,

    "workbench.editor.titleScrollbarSizing": "large",
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.closeEmptyGroups": false,
    
    "workbench.layoutControl.enabled": true,
    "workbench.tree.indent": 14, // Set tree view indentation
    // "workbench.tree.indent": 12,
    // "workbench.tree.renderIndentGuides": "always",
    "workbench.tree.renderIndentGuides": "onHover", // Render indent guides on hover
    "workbench.editor.editorActionsLocation": "titleBar",
    "workbench.list.multiSelectModifier": "alt",
    "workbench.startupEditor": "none", // Place the sidebar on the right side
    // "workbench.editor.tabActionCloseVisibility": false,
    // "workbench.colorCustomizations": {},
    // "workbench.editor.tabCloseButton": "On",
    // "workbench.settings.editor": "json", // Use JSON format for settings editor

    // !Editor

    "editor.minimap.enabled": false, // OPTIONAL
    "breadcrumbs.enabled": true,
    "editor.overviewRulerBorder":true,
    "editor.padding.bottom": 14,
    "editor.padding.top": 14,
    "editor.scrollbar.horizontal": "hidden",
    "editor.codeLens": false,
    "editor.glyphMargin": false,
    "editor.foldingHighlight": false,
    "editor.renderLineHighlight": "none",
    "editor.guides.indentation": true,
    "editor.guides.highlightActiveIndentation": false,
    "editor.matchBrackets": "never",
    "editor.guides.highlightActiveBracketPair": false,
    "editor.lineNumbers": "on", // OPTIONAL
    "editor.parameterHints.enabled": false,
    "editor.inlayHints.enabled": "off",
    "editor.inlineSuggest.enabled": true,
    "editor.multiCursorModifier": "alt",
    "editor.multiCursorMergeOverlapping": false,
    "editor.scrollbar.verticalScrollbarSize": 10,
    "editor.scrollbar.horizontalScrollbarSize": 10,
    "editor.linkedEditing": true,

    // !Explorer
    "explorer.openEditors.visible": 1,
    "explorer.autoReveal": false,
    "explorer.compactFolders": false,

    // !Window
    "window.autoDetectHighContrast": false,
    
    "window.titleSeparator": " | ",
    "settingsSync.ignoredSettings": [
        "window.titleBarStyle",
    ],

    // !Terminal
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.cursorStyleInactive": "underline",
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.enableImages": true,
    "terminal.integrated.fontFamily":  "SF mono,\"Hack Nerd Font\"",//"Cartograph CF",//"jet brains mono","Cartograph CF Regular",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.letterSpacing": 0,
    "terminal.integrated.lineHeight": 1,
    "terminal.integrated.fontWeight": "normal",
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.autoReplies": {
        "Terminate batch job (Y/N)": "Y\r",
        "Terminate batch job (Y/n)": "Y\r",
    },
    "terminal.integrated.shellIntegration.history": 0,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.defaultProfile.windows": "PowerShell",


    // !Debug
    "debug.terminal.clearBeforeReusing": true,

    // !Explorer Settings
    "explorer.confirmDragAndDrop": false,

